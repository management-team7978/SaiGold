                                    android:layout_height="60dp"
                                    app:lottie_autoPlay="true"
                                    app:lottie_fileName="21192-premium-gold.json"
                                    app:lottie_loop="true"
                                    app:lottie_speed="1"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitXY" />
                            </LinearLayout>




                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/card_shape"
                        android:layout_below="@id/card2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="-37dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">




                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/card3">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:background="@drawable/card_background_dashboard"/>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TOTAL DIRECTS(2)"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:id="@+id/tvTotalDirect"/>

                            <TextView
                                android:id="@+id/tvPaidFreeDirect"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/roboto_bold"
                                android:textColor="@color/black"
                                android:layout_below="@id/tvTotalDirect"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:visibility="visible"
                                android:layout_marginBottom="-10dp"
                                android:layout_marginRight="-10dp">

                                <com.airbnb.lottie.LottieAnimationView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:lottie_autoPlay="true"
                                    app:lottie_fileName="21192-premium-gold.json"
                                    app:lottie_loop="true"
                                    app:lottie_speed="1"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitXY" />
                            </LinearLayout>




                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/card_shape"
                        android:layout_below="@id/card3"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="-37dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/card4">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:background="@drawable/card_background_dashboard"/>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DIRECT INCOME"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:id="@+id/tvDI"/>

                            <TextView
                                android:id="@+id/tvDirectIncome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:textSize="18sp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/roboto_bold"
                                android:textColor="@color/black"
                                android:layout_below="@id/tvDI"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:visibility="visible"
                                android:layout_marginBottom="-10dp"
                                android:layout_marginRight="-10dp">

                                <com.airbnb.lottie.LottieAnimationView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:lottie_autoPlay="true"
                                    app:lottie_fileName="21192-premium-gold.json"
                                    app:lottie_loop="true"
                                    app:lottie_speed="1"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitXY" />
                            </LinearLayout>

                        </RelativeLayout>



                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/card_shape"
                        android:layout_below="@id/card4"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="-37dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/card5">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:background="@drawable/card_background_dashboard"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SUCCESS WITHDRAW"
                                android:textSize="14sp"
                                android:id="@+id/tvSW"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/tvSuccessWithdraw"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/roboto_bold"
                                android:textColor="@color/black"
                                android:layout_below="@id/tvSW"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:visibility="visible"
                                android:layout_marginBottom="-10dp"
                                android:layout_marginRight="-10dp">

                                <com.airbnb.lottie.LottieAnimationView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:lottie_autoPlay="true"
                                    app:lottie_fileName="21192-premium-gold.json"
                                    app:lottie_loop="true"
                                    app:lottie_speed="1"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitXY" />
                            </LinearLayout>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/card_shape"
                        android:layout_below="@id/card5"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="-37dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
