                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rlDirectReferral"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/referral"
                        android:id="@+id/imgDirectReferral"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Direct Team"
                        android:layout_toRightOf="@id/imgDirectReferral"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/tvDirectTeam"
                        android:visibility="visible"
                        android:layout_marginTop="5dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#B3FFFFFF"
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/tvDirectTeam"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rlIndirectReferral"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/referral"
                        android:id="@+id/imgIndirectReferral"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Indirect Team"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/tvIndirectTeam"
                        android:visibility="visible"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/imgIndirectReferral"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#B3FFFFFF"
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/tvIndirectTeam"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rlBankDetails"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/bank"
                        android:id="@+id/imgBank"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imgBank"
                        android:text="Bank Details"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/tvBankDetails"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#B3FFFFFF"
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/imgBank"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rlIDActivator"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp"
                    android:visibility="visible">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/id"
                        android:id="@+id/imgActivation"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Id Activation"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/tvIdActivation"
                        android:visibility="visible"
                        android:layout_toRightOf="@id/imgActivation"
                        android:layout_marginTop="5dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#B3FFFFFF"
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/tvIdActivation"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rlIDActivatorHistory"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp"
                    android:visibility="visible">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/id"
                        android:id="@+id/imgActivationHistory"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imgActivationHistory"
                        android:text="Id Activation History"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/tvActivationHistory"
                        android:visibility="visible"
                        android:layout_marginTop="5dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#B3FFFFFF"
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/tvActivationHistory"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
