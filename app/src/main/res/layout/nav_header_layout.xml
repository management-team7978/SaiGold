                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Money Withdraw"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_toRightOf="@id/imgWithdraw"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/tvWithdrawMoney"
                        android:visibility="visible"
                        android:layout_marginTop="5dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#B3FFFFFF"
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/tvWithdrawMoney"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rlWithdrawHistory"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/money"
                        android:id="@+id/imgWithdrawHistory"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Withdraw History"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/imgWithdrawHistory"
                        android:id="@+id/tvWithdrawHistory"
                        android:visibility="visible"
                        android:layout_marginTop="5dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#B3FFFFFF"
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/tvWithdrawHistory"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rlIncomeHistory"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/history"
                        android:id="@+id/imgHistory"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imgHistory"
                        android:text="Team Income History"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/tvIncomeHistory"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#B3FFFFFF"
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/tvIncomeHistory"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rlInvestmentHistory"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/investment"
                        android:id="@+id/imgInvestment"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imgInvestment"
                        android:text="My Investment"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/tvInvestment"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#B3FFFFFF"
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/tvInvestment"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rlTransactionHistory"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/transaction"
                        android:id="@+id/imgTransaction"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imgTransaction"
                        android:text="Transaction History"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/tvTransaction"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#B3FFFFFF"
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/tvTransaction"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rlLogout"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_logout"
                        android:id="@+id/imgLogout"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imgLogout"
                        android:text="Logout"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/tvLogout"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#B3FFFFFF"
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/tvLogout"/>
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>




